<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.vecteezy.com/system/resources/previews/010/852/520/non_2x/cinema-entertainment-banner-vector.jpg);">
  <div class="container text-align-right">
    <h1 class="display-1 fs-1", style="margin-left: 900px;"><strong> <%= @list.name %></strong></h1>
  </div>
</div>
<div class="container">
  <div class="d-flex justify-content-between mt-3">
    <div class="align-content-center">
      <%= link_to "Back", lists_path, class: "btn btn-outline-danger" %>
    </div>
  </div>
    <% @list.bookmarks.each do |bookmark| %>
        <div class="card-product mt-3">
          <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title %>
          <div class="card-product-infos">
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.overview %></p>
            <strong><%= bookmark.movie.rating %>/10</strong>
            <p><i>"<%= bookmark.comment %>"</i></p>
          </div>
      </div>
        <%= link_to "Delete", bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class: "btn btn-outline-danger"%>
    <% end %>
    <div class="mt-3">
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.association :movie, collection: Movie.all, prompt: "Choose a film", label: false %>
          <%= f.input :comment, label: false, placeholder: "Your comment about this movie..." %>
          <%= f.button :submit, "Add this film", class: "btn btn-outline-primary" %>
        <% end %>
    </div>
  </div>
</div>
<%= render "footer" %>
