
<div class="container">
  <div class="d-flex  display-1 m-3">
    <h1>My <%= @list.name %></h1>

    <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-primary mr-2" %>
    <%= link_to "Back", lists_path, class: "btn btn-outline-danger" %>
  </div>
    <ul>
      <% @list.bookmarks.each do |bookmark| %>
        <li>
          <h6><%= bookmark.movie.title %></h6>
          <%= bookmark.movie.overview %>
          <%= image_tag bookmark.movie.poster_url, alt: "text" %>
          <%= bookmark.movie.rating %>
          <strong><%= bookmark.comment %></strong>
          <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </li>
      <% end %>
    </ul>
</div>
